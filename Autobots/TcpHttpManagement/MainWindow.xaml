<Window x:Class="TcpHttpManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server Management" Height="800" Width="1000" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <DockPanel>
        <Menu Height="23" DockPanel.Dock="Top">
        </Menu>
        <ToolBar Height="30" DockPanel.Dock="Top">
            <Button BorderBrush="DarkGray" Margin="1" Click="Start_Button_Click"
                    IsEnabled="{Binding Path=NotInRun,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}">
                <Button.Content>
                    <Image Margin="-3" Source="resources/player_play.png" Style="{StaticResource ImageEnableDisableStyle}"/>
                </Button.Content>
            </Button>
            <Button BorderBrush="DarkGray" Margin="1" Click="Stop_Button_Click"
                    IsEnabled="{Binding Path=InRun,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}">
                <Button.Content>
                    <Image Margin="-3" Source="resources/player_stop.png" Style="{StaticResource ImageEnableDisableStyle}"/>
                </Button.Content>
            </Button>
            <Separator/>
            <Button BorderBrush="DarkGray" Margin="1" Click="Computer_Button_Click"
                    IsEnabled="{Binding Path=NotInRun,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}">
                <Button.Content>
                    <Image Margin="-3" Source="resources/Computer.ico" Style="{StaticResource ImageEnableDisableStyle}"/>
                </Button.Content>
            </Button>
            <Separator/>
            <Button BorderBrush="DarkGray" Margin="1" Click="SetLogFolder_Button_Click"
                    IsEnabled="{Binding Path=NotInRun,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}">
                <Button.Content>
                    <Image Margin="-3" Source="resources/Folder.ico" Style="{StaticResource ImageEnableDisableStyle}"/>
                </Button.Content>
            </Button>
            <Button BorderBrush="DarkGray" Margin="1" Click="OpenLogFolder_Button_Click"
                    IsEnabled="{Binding Path=NotInRun,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}">
                <Button.Content>
                    <Image Margin="-3" Source="resources/OpenFolder.ico" Style="{StaticResource ImageEnableDisableStyle}"/>
                </Button.Content>
            </Button>
            <Separator/>
            <Button Click="Window_Exit" BorderBrush="DarkGray" Margin="1"
                    IsEnabled="{Binding Path=NotInRun,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}">
                <Button.Content>
                    <Image Margin="-3" Source="resources/exit.png" Style="{StaticResource ImageEnableDisableStyle}"/>
                </Button.Content>
            </Button>
        </ToolBar>
        <StatusBar Height="32" DockPanel.Dock="Bottom">
            <!--DockPanel>
                <DockPanel DockPanel.Dock="Left">
                    <Image Width="23"/>
                    <Label Content="{Binding Path=HttpServerState,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"
                           Foreground="{Binding Path=HttpServerStateForeground,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>
            </DockPanel-->
            <ProgressBar Width="200" Height="15" Maximum="100"
